startup_screen = media_library 
execute_on_song_change = notify-send --urgency=low "Now Playing" "$(mpc --format '%title% - %album% - %artist% ' current)"

# Display ..
song_list_format = " %n | %b | %t | %A | %l"
song_status_format = "$b$8%t $5● $8%b $5● $8%a"
playlist_display_mode = "classic" (classic/columns)
current_item_inactive_column_prefix = $(blue)$r
current_item_inactive_column_suffix = $/r$(end)

now_playing_prefix = "$b$8"
now_playing_suffix = "$/b$9"

# Playlist ..
browser_playlist_prefix = "$2 - $0 "

# Delays .. 
playlist_disable_highlight_delay = "1"
message_delay_time= "1"

# Progress Bar ..
progressbar_look = "=|="
progressbar_color = "blue"
progressbar_elapsed_color = white
progressbar_boldness = yes 

# Colors ..
colors_enabled = "yes"
empty_tag_color = "red"
statusbar_color = "blue"
state_line_color = "black"
state_flags_color = "green"
main_window_color = "blue" 
header_window_color = "blue"
main_window_highlight_color = "white"
window_border_color = blue
active_window_border = blue
active_column_color = "blue"  
color1 = blue 
#
color2 = blue

# Misc ..   
display_bitrate = "no"
autocenter_mode = "yes"
centered_cursor = "yes"
titles_visibility = "no"
statusbar_visibility = "yes"
empty_tag_marker="-" 
mouse_support = "yes"
header_visibility = "yes"
display_remaining_time = "no"
ask_before_clearing_playlists = "no"
discard_colors_if_item_is_selected = "yes"
cyclic_scrolling = yes


# Visualizer ..
visualizer_in_stereo = "yes"
visualizer_sync_interval = "30"
visualizer_output_name = "Pipe"
visualizer_fifo_path = "/tmp/mpd.fifo"
visualizer_type = spectrum 
visualizer_look = ●▮
visualizer_color = blue, cyan, green, yellow, magenta, red

## %l - length
## %f - filename
## %D - directory
## %a - artist
## %A - album artist
## %t - title
## %b - album
## %y - date
## %n - track number (01/12 -> 01)
## %N - full track info (01/12 -> 01/12)
## %g - genre
## %c - composer
## %p - performer
## %d - disc
## %C - comment
## %P - priority
## $R - begin right alignment

## - 0 - default window color (discards all other colors)
## - 1 - black
## - 2 - red
## - 3 - green
## - 4 - yellow
## - 5 - blue
## - 6 - magenta
## - 7 - cyan
## - 8 - white
## - 9 - end of current color
## - b - bold text
## - u - underline text
## - r - reverse colors
## - a - use alternative character set
