{
  "pairs.enableCharacters": ["(", "[", "{", "'", "\"", "`"],
  "suggest.noselect": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "haskell"
  ],
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
      "filetypes": ["haskell", "lhaskell"]
    }
  },
	"list.insertMappings": {
		"<C-r>": "do:refresh",
		"<C-f>": "feedkeys:\\<C-f>",
		"<C-b>": "feedkeys:\\<C-b>",
		"<C-n>": "normal:j",
		"<C-p>": "normal:k",
		"<C-t>": "action:tabe"
	},

  "explorer.icon.enableNerdfont": true,
  "explorer.quitOnOpen": false,
  "explorer.position": "left",
  "explorer.file.showHiddenFiles": true,
  "explorer.file.column.clip.copy": "",
  "explorer.file.column.clip.cut": "",
  "explorer.width": 30,
  "explorer.keyMappings.global": {
    "gk": "expandablePrev",
    "gj": "expandableNext",

    "<space>": "toggleSelection",
    "<tab>": "actionMenu",

    "h": "collapse",
    "K": ["toggleSelection", "nodePrev"],
    "<2-LeftMouse>": [
      "expandable?",
      ["expanded?", "collapse", "expand"],
      "open"
    ],
    "o": ["expanded?", "collapse", "expand"],
    "<cr>": ["expandable?", "cd", "open"],
    "L": "open:vsplit",
    "l": ["expandable?", "cd", "open"],
    "<bs>": "gotoParent",
    "gp": "preview:labeling",

    "Y": "copyFile",
    "X": "cutFile",
    "P": "pasteFile",
    "dd": "delete",

    "T": "addFile",
    "D": "addDirectory",
    "r": "rename",

    ".": "toggleHidden",
    "R": "refresh",

    "?": "help",
    "q": "quit",
    "<esc>": "esc",
    "!": "systemExecute",
    "gd": "listDrive",

    "f": "search",
    "F": "searchRecursive",

    "gf": "gotoSource:file",
    "gb": "gotoSource:buffer",

    "[[": "sourcePrev",
    "]]": "sourceNext",

    "[d": "diagnosticPrev",
    "]d": "diagnosticNext",

    "[c": "gitPrev",
    "]c": "gitNext",
    "<<": "gitStage",
    ">>": "gitUnstage"
  }
}
