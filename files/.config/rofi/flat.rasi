	fg: #ffffff;
	fg-dark: #aaaaaa;
	fg-highlight: #ffffff;
	bg: #25252655;
	bg-highlight: #264f78aa;
	bd: #3E3E3Faa;
	bd-highlight: #585859cc;
	bd-outer: #000000;

