	text-color: @fg;
	background-color: @bg;
	y-offset: 25%;
	width: 55em;
	spacing: 0;
}

mainbox {
	border-color: @bd;
	border-radius: 4;
	border: 0 2 2 2;
}

window {
	border-color: @bd-outer;
	border-radius: 4;
	border: 1;
}

inputbar {
	background-color: @real-bg;
	border-color: @bd-highlight;
	padding: 0 0 0 0;
	border: 1 0 2 0;
	border-radius: 2;
}

prompt {
	text-color: @fg-dark;
	padding: 0.5em 0.7em 0.5em 0.7em;
	border: 0 0 0 0;
	border-radius: 0;
	/* font: "Source Code Pro Nerd Font Medium 20"; */
	font: "Source Code Pro Nerd Font Medium 15";
}

entry {
	background-color: @bg;
	placeholder-color: @fg-dark;
	placeholder: "";
	padding: 0.6em 0.5em 0.2em 0.1em;
	border-radius: 0;
	font: "Source Code Pro Nerd Font Medium 20";
}

listview {
  layout: vertical;
	background-color: @real-bg;
	cycle: true;
	dynamic: true;
	lines: 15;
  scrollbar: false;
  /* spacing: 1em; */
	border-color: @bd;
	border: 0 1 1 1;
	border-radius: 2;
}

element {
	border-color: @bd-inner;
	border: 1 0 1 0;
	background-color: @bg;
	padding: 0.3em 0.3em 0.3em 0.3em;
	border-radius: 0;
}

element selected {
	background-color: @bg-highlight;
	text-color: @fg-highlight;
	border-radius: 0;
}
