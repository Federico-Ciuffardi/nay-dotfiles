	text-color: @fg;
	background-color: @bg;
	y-offset: 25%;
	width: 55em;
	spacing: 0;
}

mainbox {
	border-color: @bd;
	border-radius: 4;
	border: 0 2 2 2;
}

window {
	border-color: @bd-outer;
	border-radius: 4;
	border: 1;
}

inputbar {
	border-color: @bd-highlight;
	border: 2 0 0 0;
	border-radius: 0;
}

prompt {
	text-color: @fg-dark;
	padding: 0.25em 0.7em 0.4em 0.7em;
	border: 0 0 0 0;
	border-radius: 0;
	font: "Source Code Pro Medium 20";
}

entry {
	placeholder-color: @fg-dark;
	placeholder: "Search";
	padding: 0.3em 0.5em 0.1em 0.1em;
	border-radius: 0;
	font: "Source Code Pro Medium 20";
}

listview {
	background-color: @bg;
	cycle: false;
	dynamic: true;
	lines: 20;
	border-color: @bd;
	border: 1 0 0 0;
	border-radius: 0;
}

element {
	padding: 0.3em 0 0.3em 0.3em;
	border-radius: 0;
}

element selected {
	background-color: @bg-highlight;
	text-color: @fg-highlight;
	border-radius: 0;
}
