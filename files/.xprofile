#! /usr/bin/env bash

function vsync { nvidia-settings --assign CurrentMetaMode="nvidia-auto-select +0+0 { ForceFullCompositionPipeline = $@ }" ;}
[[ $(nvidia-settings -tq CurrentMetaMode | grep ForceFullCompositionPipeline=On) ]] && vsync Off || vsync On

# Network
nm-applet &

# Screen positions
xrandr --output eDP-1 --mode 1920x1080 --rate 60 --output HDMI-0 --auto --output DP-1 --auto --left-of HDMI-0 &>/dev/null
brightctl 155

# Temporarily turning the touch-pad off while typing
syndaemon -K -i 0.5 -R -d &

# enable numlockx
numlockx &

# Disables Energy Star features (No screen blank)
xset -dpms
xset s off

# Speed xrate up
xset r rate 300 50

# load .Xresources
[ -f ~/.Xresources ] && xrdb ~/.Xresources &

# load Xmodmap/Xbindkeys config
[ -f ~/.config/Xmodmap ] && xmodmap ~/.config/Xmodmap &

# Wallpaper
nitrogen --set-tiled $WALLPAPER_FILE &

# Audio
pipewire-pulse &>/dev/null &
# start-pulseaudio-x11 &
mpd &
# pulseaudio &

# Disk Automount
udiskie --smart-tray --notify &

# Screensaver
xscreensaver -no-splash &>/dev/null &

# clipboard
parcellite &

# redshift
redshift-gtk -t 6500:5000 &

# remove idle mouse
unclutter -noevents -idle 2.5 &

# kdeconnect
# export $(dbus-launch)
kdeconnect-indicator &

# polkit
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &>/dev/null &

# Compositor
picom &>/dev/null &

# Notification
(sleep 5 && dunst) &

# Network dependent
(
  sleep 30
  whatsapp-nativefier &
  mattermost-desktop &
) &

[ -f ~/.xprofile-custom ] && bash ~/.xprofile-custom
