# Screen positions
xrandr --output HDMI-0 --auto --primary
xrandr --output DVI-I-0 --right-of HDMI-0 --auto

# Temporarily turning the touch-pad off while typing
syndaemon -K -i 0.5 -R -d &

# enable numlockx
numlockx &

# Speed xrate up
xset r rate 300 50 

# load .Xresources 
[ -f ~/.Xresources ] && xrdb ~/.Xresources &

# load Xmodmap/Xbindkeys config
[ -f ~/.config/Xmodmap ] && xmodmap ~/.config/Xmodmap &

# Wallpaper
nitrogen --set-scaled ~/.config/wallpaper &

# Compositor
picom --experimental-backends &

# Network
nm-applet &

# Audio
start-pulseaudio-x11 &

# Disk Automount
devmon &
udiskie --tray &

# Screensaver
xscreensaver -no-splash &

# Notification
dunst &

# clipboard
parcellite &

# redshift
redshift-gtk -t 6500:5000 &

# remove idle mouse
unclutter &

# kdeconnect
kdeconnect-indicator &
