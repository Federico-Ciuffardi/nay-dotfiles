# sync firefox profiles
echo
echo ":: Sync firefox profiles"
cd $HOME/.mozilla/firefox/ 
for profile in `grep path -i profiles.ini | sed 's/Path=//g'` ; do
  echo "  $profile"
  cp -r custom_config/*  $profile
done
printf "\n"

# install vim plug pluggins
echo ":: Sync vim pluggins"
nvim -c " PlugUpgrade | PlugClean | PlugUpdate | PlugInstall | qa"
printf "\n"


# install tmux tpm pluggins
echo ":: Sync tmux pluggins"
$HOME/.tmux/plugins/tpm/bin/clean_plugins
$HOME/.tmux/plugins/tpm/bin/update_plugins all
$HOME/.tmux/plugins/tpm/bin/install_plugins
tmux source-file ~/.tmux.conf
printf "\n"
